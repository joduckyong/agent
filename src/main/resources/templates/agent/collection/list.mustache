<script>
document.title = "LX DT | 데이터 수집 관리";

const url = '/agent/collection';

let init_page = 1;				//초기 페이지
let page = 1;					//페이지
let init_size_per_page = 10;	//초기 개수
let size_per_page = 10;	 		//가져올 개수
let pageCount = 10;		 		//페이징에 나타낼 페이지 수

//데이터 수집 목록
const agentClctList = function(page, size_per_page){
	
	if(!page){
		page = init_page;
	}
	if(!size_per_page){
		size_per_page = init_size_per_page;
	}
	
	console.log('page : '+page+' , size_per_page : '+size_per_page );     
	
	let query = $("#query").val() != null ? $("#query").val() : '';
	
	const data = {
	   		url: '/clct/list',
	   		user_id: 'user00',	
	   		clct_nm: query,	   		
	   		page_current: page,	   		
	   		amount: size_per_page,	   		
	    };		
	    $.ajax({
	        type: 'POST',
	        url: url+'/agentClctList',
	        dataType: 'json',
	        contentType: 'application/json; charset-utf-8',
	        data: JSON.stringify(data)
	    }).done(function (data) {
	    	  $("#agentClctList").empty();
		  	  if (data != null) {
			  		$("#total_count").text(data.total_count);
		     	    if(data.content != ""){
		     	    	let insertTr = '';
			     	    $.each(data.content, function (idx, el) {
			     	          insertTr += '<tr>';
			                  insertTr += ' <td style="text-align: center;">'+(idx+1)+'</td>';
			                  insertTr += ' <td style="text-align: center;cursor:pointer;" onclick=jsDetail("'+el.clct_id+'","'+el.clct_file_num+'");><span class="blue bold">'+el.clct_nm+'</span></td>';
			                  insertTr += ' <td style="text-align: center;">'+isEmpty(el.clct_file_num)+'</td>';
			                  insertTr += ' <td style="text-align: center;">'+isEmpty(el.clct_datetime)+'</td>';
			                  insertTr += ' <td style="text-align: center;">'+isEmpty(el.clct_datetime)+'</td>';
			                  insertTr += '</tr>';
				  	    });
		                $("#agentClctList").append(insertTr);
		     	    }
		  	    	//페이징 보여줌
		  	    	paging(data.total_count, size_per_page, pageCount, page);		     	    
		  	  }
	    	  
	    }).fail(function (error) {
	        alert(JSON.stringify(error));
	    });		
}

//페이징 함수 호출
const pagingFun = function(page, size_per_page){
	agentClctList(page, size_per_page);
}

//엔터키가 눌렸을 때
const enterkey = function(e) {
	if (e.keyCode == 13) {
		agentClctList();
    }
}

//조회
agentClctList(page, size_per_page);

//등록페이지
const jsAdd = function(){
	location.href = url+'/add';
}	

//수정페이지
const jsDetail = function(clct_id, clct_file_num){
	location.href = url+'/update/'+clct_id+'/'+clct_file_num;
}	
</script>

